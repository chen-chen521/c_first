/**app.wxss**/
.box {/**定义用于设置边框的样式**/
  margin: 20rpx;/**外边距**/
  padding: 20rpx;/**内边距**/
  border: 1px solid silver;/**边框1px，实线，银灰色**/
}
.title{/**用于设置标题的样式**/
  font-size: 28px;/**字体大小25px**/
  text-align:center;/**文本水平对齐方式为居中**/
  margin-bottom: 15px;/**下外边距为15px**/
  color:dodgerblue;
  font-style:oblique;
}
.text{
  font-size: 25px;
  font-family: cursive;
  text-align: left;
  text-decoration: underline;
  text-indent:15%;
  text-decoration-color:rgb(94, 41, 199);
}